---
import HeaderLink from './HeaderLink.astro'
import { IoLogoGithub } from 'react-icons/io5'
import { Image } from '@astrojs/image/components'
import logo from '../../public/assets/logo.png'
import ThemeToggle from './ThemeToggleButton'
---

<header class="fixed w-full p-2 z-20 backdrop-blur-md">
  <div class="mx-auto max-w-3xl">
    <nav class="flex items-center gap-3 text-base">
      <a href="/" class="group">
        <h2 class="font-semibold tracking-tighter p-2 font-mplus text-lg">
          <Image
            src={logo}
            alt="Logo"
            class="w-6 h-[25px] inline-block transition-transform group-hover:rotate-[20deg]"
          />
          Carlos de la Cruz
        </h2>
      </a>
      <div class="items-center gap-6 hidden md:flex">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
        <HeaderLink href="https://github.com/heyimcarlos">
          <IoLogoGithub />
          Source</HeaderLink
        >
      </div>
      <div class="flex-1"></div>
      <ThemeToggle client:load />
    </nav>
  </div>
</header>
