---
import { motion } from 'framer-motion'
export interface Props {
  delay?: number
}
const { delay = 0 } = Astro.props
---

<!-- client:only [x] | client:visible [x] -->
<motion.div
  client:load
  initial={{ y: 10, opacity: 0 }}
  animate={{ y: 0, opacity: 1 }}
  transition={{ duration: 0.8, delay }}
  className="mb-6"
>
  <slot />
</motion.div>
