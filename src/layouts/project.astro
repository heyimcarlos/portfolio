---
import { Image } from '@astrojs/image/components'
import Heading from '../components/Heading'
import PasswordInput from '../components/PasswordInput'
import MotionSection from '../components/MotionSection'
import BaseHead from '../components/BaseHead.astro'
import Body from '../components/Body.astro'
import Header from '../components/Header.astro'
import Content from '../components/Content.astro'
import Footer from '../components/Footer.astro'
import Paragraph from '../components/Paragraph.astro'
import { SITE_TITLE } from '../config'
import type { MarkdownLayoutProps } from 'astro'
type Props = MarkdownLayoutProps<{
  title: string
  description: string
  img: string
  date: string
  password: string
  tags: string[]
}>
const { content, url = '' } = Astro.props
console.log({ props: Astro.props.compiledContent() })
---

<html lang="en">
  <head>
    <BaseHead
      title={`${SITE_TITLE} | ${content.title}`}
      description={content.description}
    />
  </head>
  <Body>
    <Header />
    <main class="pt-[56px] relative">
      {
        content.password && (
          <PasswordInput
            client:load
            password={content.password}
            title={content.title}
          />
        )
      }
      <Content>
        <div
          class="bg-custom-teal dark:bg-zinc-700 p-3 my-6 text-center rounded-lg"
        >
          <MotionSection client:load delay={0.15} classNames="mb-0">
            <a href={content.href} class="inline-block">
              <Heading as="h1" variant="section-title" className="no-underline">
                {content.title}
              </Heading>
            </a>
          </MotionSection>
        </div>
        <MotionSection client:load delay={0.3}>
          <slot />
        </MotionSection>
        <span class="text-4xl"></span>
        <span class="text-2xl"></span>
      </Content>
    </main>
  </Body>
  <Footer />
</html>
